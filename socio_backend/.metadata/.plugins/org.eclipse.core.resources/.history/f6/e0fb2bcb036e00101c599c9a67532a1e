		return null;
	}

	@Override
	public Post findPostById(Integer postId) throws Exception {

		Optional<Post> opt = postRepository.findById(postId);

		if (opt.isEmpty())
			throw new Exception("Post not found with id " + postId);

		return opt.get();
	}

